# File Server Basic Configuration

# API认证令牌
AUTH_TOKEN=test

# 文件存储路径
FILE_STORAGE_PATH=storage

# 文件大小限制 (MB)
MAX_FILE_SIZE_MB=5000

# 分片上传配置 (MB)
UPLOAD_CHUNK_SIZE_MB=4
DOWNLOAD_CHUNK_SIZE_MB=4

# 服务器配置
VITE_FILE_SERVER_HOST=0.0.0.0
VITE_FILE_SERVER_PORT=8000

# API端点
# VITE_API_ENDPOINT=


# LLM API Configuration
# LLM API Key (必需)
LLM_API_KEY=your-api-key-here

# LLM API 基础URL
LLM_BASE_URL=https://api.openai.com/v1

# 默认模型 (支持 OpenAI、Google、Claude 等兼容模型)
LLM_DEFAULT_MODEL=gpt-5-nano

# 温度参数 (0-2之间，越高越随机)
# Temperature parameter (0-2, higher values make output more random)
LLM_TEMPERATURE=0.6

# 最大生成 token 数
# Maximum number of tokens to generate
LLM_MAX_TOKENS=32000